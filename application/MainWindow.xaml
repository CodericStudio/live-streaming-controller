<Window x:Class="LiteralLifeChurch.LiveStreamingController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:LiteralLifeChurch.LiveStreamingController.Resources"
        mc:Ignorable="d"
        Title="{x:Static res:Strings.ApplicationName}"
        ResizeMode="NoResize"
        Height="150" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Content="{x:Static res:Strings.Status}" FontSize="14" Margin="4,0,0,0" Grid.Column="0" Grid.Row="0" />
        <Label FontSize="14" Name="statusIndicator" Grid.Column="1" Grid.Row="0" />
        <!-- TODO: Replace content text -->
        <Button Content="Start Streaming" FontSize="16px" Height="60px" Margin="10" Name="toggleButton" Width="260px" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" />
    </Grid>
</Window>
